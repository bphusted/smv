&HEAD CHID='slice_test', TITLE='Hold droplets at a constant temperature' / 

&MESH IJK=10,10,10, XB=0.0,1.0,0.0,1.0,0.0,1.0 / 
&MESH IJK=10,10,10, XB=1.0,2.0,0.0,1.0,0.0,1.0 / 
&MESH IJK=10,10,10, XB=2.0,3.0,0.0,1.0,0.0,1.0 / 
&MESH IJK=10,10,10, XB=3.0,4.0,0.0,1.0,0.0,1.0 / 

&TIME DT=0.01, T_END=1.0 /

&MISC NOISE=F, FREEZE_VELOCITY=T/

&SURF ID='walls', ADIABATIC=T, DEFAULT=T, RGB=255,255,255/

&RADI RADIATION=.FALSE./

&INIT XB=0.0,1.0,0.0,1.0,0.0,1.0  TEMPERATURE=100.0 /
&INIT XB=1.0,2.0,0.0,1.0,0.0,1.0  TEMPERATURE=200.0 /
&INIT XB=2.0,3.0,0.0,1.0,0.0,1.0  TEMPERATURE=300.0 /
&INIT XB=3.0,4.0,0.0,1.0,0.0,1.0  TEMPERATURE=400.0 /

&SLCF PBY=0.5, QUANTITY='TEMPERATURE' /
&SLCF PBZ=0.5, QUANTITY='TEMPERATURE' /
&SLCF PBY=0.5, QUANTITY='TEMPERATURE', CELL_CENTERED=.TRUE. /
&SLCF PBZ=0.5, QUANTITY='TEMPERATURE', CELL_CENTERED=.TRUE. /


&TAIL /
